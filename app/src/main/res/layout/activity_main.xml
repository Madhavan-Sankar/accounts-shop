<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:gravity="center_horizontal"
    android:id="@+id/pleasechange"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:textColor="#00A5CF"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="15dp"
            android:layout_weight="100"
            android:textSize="25dp"
            android:text="ALL IS WELL"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <Button
        android:id="@+id/backup"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#0CCE6B"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Backup Data"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_weight="40"
            android:textStyle="italic|bold"
            android:textColor="#CB48B7"
            android:text="Total Credit :"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/finalamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_weight="60"
            android:textStyle="italic|bold"
            android:textColor="#CB48B7"
            android:text="0"
            android:gravity="center" />
    </LinearLayout>

    <com.hitomi.cmlibrary.CircleMenu
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/circle"/>

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#B3FF38"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/restore"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#0CCE6B"
        android:layout_height="wrap_content"
        android:text="Restore Data"/>

    </LinearLayout>
</LinearLayout>